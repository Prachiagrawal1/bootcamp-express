<body>
    <form class='container' action="/tasks/add" method="POST">
        <h1>Todo List </h1>
        <div class='field'>
            <label>Title</label>
            <div class='container'>
                <input type="text" name="title">
            </div>
        </div>
        <div class='field'>
            <label>Description</label>
            <div class='container'>
                <input type="textarea" name="des">
            </div>
        </div>
        <div class='field'>
            <label>Enddate</label>
            <div class='container'>
                <input type="date" name="enddate">
            </div>
        </div>

        </div>
        <br>
        <br>
        
        <button type="submit">
            Submit
        </button>
    </form>
</body>

</html>